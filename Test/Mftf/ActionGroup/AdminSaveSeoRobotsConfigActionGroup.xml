<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminSaveSeoRobotsConfigActionGroup">
        <annotations>
            <description>Saves the SEO Robots configuration and verifies success message.</description>
        </annotations>

        <click selector="{{AdminSeoRobotsConfigSection.saveButton}}" stepKey="clickSaveConfig"/>
        <waitForPageLoad stepKey="waitForSave"/>
        <see selector="div.message-success" userInput="You saved the configuration." stepKey="seeSuccessMessage"/>
    </actionGroup>
</actionGroups>
