<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminConfigurationUnsetInheritActionGroup">
        <annotations>
            <description>Unset inherit for specific configuration.</description>
        </annotations>
        <arguments>
            <argument name="rowId" type="string"/>
        </arguments>

        <uncheckOption selector="{{rowId}} .config-inherit" stepKey="uncheckUseDefault"/>
    </actionGroup>
</actionGroups>
