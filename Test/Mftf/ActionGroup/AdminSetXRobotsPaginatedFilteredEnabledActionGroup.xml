<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminSetXRobotsPaginatedFilteredEnabledActionGroup">
        <annotations>
            <description>Sets the X-Robots-Tag paginated filtered enabled/disabled state.</description>
        </annotations>
        <arguments>
            <argument name="enabled" type="string" defaultValue="1"/>
        </arguments>

        <uncheckOption selector="{{AdminSeoRobotsConfigSection.xRobotsPaginatedFilteredEnabledInherit}}" stepKey="uncheckUseDefault"/>
        <selectOption selector="{{AdminSeoRobotsConfigSection.xRobotsPaginatedFilteredEnabled}}" userInput="{{enabled}}" stepKey="setXRobotsPaginatedFilteredEnabled"/>
    </actionGroup>
</actionGroups>
