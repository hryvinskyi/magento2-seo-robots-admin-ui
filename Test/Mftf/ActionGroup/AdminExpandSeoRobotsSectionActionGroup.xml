<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminExpandSeoRobotsSectionActionGroup">
        <annotations>
            <description>Expands the Meta Robots section in the SEO configuration.</description>
        </annotations>

        <conditionalClick selector="{{AdminSeoRobotsConfigSection.metaRobotsSection}}"
                          dependentSelector="{{AdminSeoRobotsConfigSection.enabledField}}"
                          visible="false"
                          stepKey="expandMetaRobotsSection"/>
        <waitForElementVisible selector="{{AdminSeoRobotsConfigSection.enabledField}}" stepKey="waitForEnabledFieldVisible"/>
    </actionGroup>
</actionGroups>
