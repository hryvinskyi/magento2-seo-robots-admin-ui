<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminSeoRobotsPaginatedConfigTest">
        <annotations>
            <features value="SeoRobotsAdminUi"/>
            <stories value="Paginated Robots Configuration"/>
            <title value="Admin can configure paginated robots settings"/>
            <description value="Verify that admin can enable paginated robots in system configuration"/>
            <severity value="MAJOR"/>
            <group value="seo"/>
            <group value="seo_robots"/>
        </annotations>

        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
        </before>
        <after>
            <!-- Reset to default -->
            <actionGroup ref="AdminNavigateToSeoRobotsConfigActionGroup" stepKey="navigateToConfigCleanup"/>
            <actionGroup ref="AdminExpandSeoRobotsSectionActionGroup" stepKey="expandSectionCleanup"/>
            <checkOption selector="{{AdminSeoRobotsConfigSection.paginatedRobotsInherit}}" stepKey="restoreDefault"/>
            <actionGroup ref="AdminSaveSeoRobotsConfigActionGroup" stepKey="saveConfigCleanup"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <!-- Navigate to SEO Robots configuration page -->
        <actionGroup ref="AdminNavigateToSeoRobotsConfigActionGroup" stepKey="navigateToConfig"/>

        <!-- Expand Meta Robots section -->
        <actionGroup ref="AdminExpandSeoRobotsSectionActionGroup" stepKey="expandSection"/>

        <!-- First enable SEO Robots Management -->
        <actionGroup ref="AdminSetSeoRobotsEnabledActionGroup" stepKey="enableSeoRobots">
            <argument name="enabled" value="1"/>
        </actionGroup>

        <!-- Enable paginated robots -->
        <actionGroup ref="AdminSetPaginatedRobotsActionGroup" stepKey="enablePaginatedRobots">
            <argument name="enabled" value="1"/>
        </actionGroup>

        <!-- Save configuration -->
        <actionGroup ref="AdminSaveSeoRobotsConfigActionGroup" stepKey="saveConfig"/>

        <!-- Verify the settings are saved -->
        <actionGroup ref="AdminNavigateToSeoRobotsConfigActionGroup" stepKey="navigateToConfigAgain"/>
        <actionGroup ref="AdminExpandSeoRobotsSectionActionGroup" stepKey="expandSectionAgain"/>
        <seeOptionIsSelected selector="{{AdminSeoRobotsConfigSection.paginatedRobots}}" userInput="Yes" stepKey="verifyPaginatedEnabled"/>
    </test>
</tests>
