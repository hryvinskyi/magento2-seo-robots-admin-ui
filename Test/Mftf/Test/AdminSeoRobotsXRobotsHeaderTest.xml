<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminSeoRobotsXRobotsHeaderEnableTest">
        <annotations>
            <features value="SeoRobotsAdminUi"/>
            <stories value="X-Robots-Tag Header Configuration"/>
            <title value="Admin can enable X-Robots-Tag HTTP Header"/>
            <description value="Verify that admin can enable X-Robots-Tag HTTP Header in system configuration"/>
            <severity value="MAJOR"/>
            <group value="seo"/>
            <group value="seo_robots"/>
        </annotations>

        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
        </before>
        <after>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <!-- Navigate to SEO Robots configuration page -->
        <actionGroup ref="AdminNavigateToSeoRobotsConfigActionGroup" stepKey="navigateToConfig"/>

        <!-- Expand Meta Robots section -->
        <actionGroup ref="AdminExpandSeoRobotsSectionActionGroup" stepKey="expandSection"/>

        <!-- Enable X-Robots-Tag Header -->
        <actionGroup ref="AdminSetXRobotsHeaderEnabledActionGroup" stepKey="enableXRobotsHeader">
            <argument name="enabled" value="1"/>
        </actionGroup>

        <!-- Save configuration -->
        <actionGroup ref="AdminSaveSeoRobotsConfigActionGroup" stepKey="saveConfig"/>

        <!-- Verify the field is enabled after save -->
        <actionGroup ref="AdminNavigateToSeoRobotsConfigActionGroup" stepKey="navigateToConfigAgain"/>
        <actionGroup ref="AdminExpandSeoRobotsSectionActionGroup" stepKey="expandSectionAgain"/>
        <seeOptionIsSelected selector="{{AdminSeoRobotsConfigSection.xRobotsHeaderEnabled}}" userInput="Yes" stepKey="verifyEnabled"/>
    </test>
</tests>
